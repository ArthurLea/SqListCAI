<Page x:Class="SqListCAI.Pages.BaseContent.SqListBassContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Margin="0" 
	  Title="SqListBaseContent" Background="White">
    <Grid>
        <Border Margin="0,2,0.2,0.5">
            <Border.BorderBrush>
                <SolidColorBrush Color="DimGray"  Opacity="5" />
            </Border.BorderBrush>
            <Border.BorderThickness >0.5</Border.BorderThickness>
            <TextBlock 
                Name="tb_showContent"
                FontSize="18" 
                TextWrapping="Wrap"
                Text="" 
                FontFamily="Microsoft YaHei"
            />
        </Border>
    </Grid>
</Page>
